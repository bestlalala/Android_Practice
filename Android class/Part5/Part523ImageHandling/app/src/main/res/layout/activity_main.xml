<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibZoomin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/zoomin"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ibZoomout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/zoomout"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ibRotate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/rotate"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ibBright"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Bright"
            android:src="@drawable/bright" />

        <ImageButton
            android:id="@+id/ibDark"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Dark"
            android:src="@drawable/dark" />

        <ImageButton
            android:id="@+id/ibGray"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Gray"
            android:src="@drawable/gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="9"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>